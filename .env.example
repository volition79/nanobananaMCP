# 나노바나나 MCP 서버 환경 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요.

# ================================
# Google AI API 설정 (필수)
# ================================
# Google AI Studio에서 발급받은 API 키
# 획득 방법: https://ai.google.dev/ → "Get API Key" → Google AI Studio
# 
# 지원되는 키 이름 (우선순위 순):
# 1. GEMINI_API_KEY (권장)
# 2. GOOGLE_API_KEY  
# 3. GOOGLE_AI_API_KEY
#
# 보안 참고: 이 키는 .env 파일보다는 MCP 서버 설정에서 관리하는 것이 더 안전합니다.
GEMINI_API_KEY=your_gemini_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Vertex AI 사용 시 (선택사항)
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=your_project_id
# Vertex AI 지역 설정 (기본값: global)  
GOOGLE_CLOUD_LOCATION=global
# Vertex AI 사용 여부 (true/false)
GOOGLE_GENAI_USE_VERTEXAI=false

# ================================
# 서버 설정
# ================================
# MCP 서버 포트 (기본값: 8000)
NANOBANANA_PORT=8000
# 서버 호스트 (기본값: localhost)
NANOBANANA_HOST=localhost
# 개발 모드 (true/false)
NANOBANANA_DEV_MODE=true

# ================================
# 이미지 생성 설정
# ================================
# 이미지 출력 디렉토리 (기본값: ./outputs)
NANOBANANA_OUTPUT_DIR=./outputs
# 임시 파일 디렉토리 (기본값: ./temp)
NANOBANANA_TEMP_DIR=./temp
# 최대 이미지 크기 제한 (MB, 기본값: 10)
NANOBANANA_MAX_IMAGE_SIZE=10
# 기본 이미지 품질 (auto/high/medium/low, 기본값: high)
NANOBANANA_DEFAULT_QUALITY=high
# 기본 이미지 형식 (png/jpeg/webp, 기본값: png)
NANOBANANA_DEFAULT_FORMAT=png

# ================================
# 프롬프트 최적화 설정
# ================================
# 프롬프트 자동 최적화 활성화 (true/false, 기본값: true)
NANOBANANA_OPTIMIZE_PROMPTS=true
# 한국어 프롬프트 자동 번역 (true/false, 기본값: true)
NANOBANANA_AUTO_TRANSLATE=true
# 안전 필터 레벨 (strict/moderate/permissive, 기본값: moderate)
NANOBANANA_SAFETY_LEVEL=moderate

# ================================
# 캐싱 설정
# ================================
# 이미지 캐시 활성화 (true/false, 기본값: true)
NANOBANANA_ENABLE_CACHE=true
# 캐시 만료 시간 (시간, 기본값: 24)
NANOBANANA_CACHE_EXPIRY=24
# 캐시 디렉토리 (기본값: ./cache)
NANOBANANA_CACHE_DIR=./cache
# 최대 캐시 크기 (MB, 기본값: 1000)
NANOBANANA_MAX_CACHE_SIZE=1000

# ================================
# 로깅 설정
# ================================
# 로그 레벨 (DEBUG/INFO/WARNING/ERROR, 기본값: INFO)
NANOBANANA_LOG_LEVEL=INFO
# 로그 파일 경로 (기본값: ./logs/nanobanana_mcp.log)
NANOBANANA_LOG_FILE=./logs/nanobanana_mcp.log
# 로그 파일 최대 크기 (MB, 기본값: 10)
NANOBANANA_LOG_MAX_SIZE=10
# 로그 파일 백업 개수 (기본값: 5)
NANOBANANA_LOG_BACKUP_COUNT=5

# ================================
# 성능 설정
# ================================
# 최대 동시 요청 수 (기본값: 3)
NANOBANANA_MAX_CONCURRENT_REQUESTS=3
# 요청 시간 제한 (초, 기본값: 300)
NANOBANANA_REQUEST_TIMEOUT=300
# 재시도 횟수 (기본값: 3)
NANOBANANA_MAX_RETRIES=3
# 재시도 간격 (초, 기본값: 1)
NANOBANANA_RETRY_DELAY=1

# ================================
# MCP 설정
# ================================
# MCP 서버 이름 (기본값: nanobanana)
NANOBANANA_SERVER_NAME=nanobanana
# MCP 서버 버전 (기본값: 1.0.0)
NANOBANANA_SERVER_VERSION=1.0.0
# 디버그 모드 (true/false, 기본값: false)
NANOBANANA_DEBUG=false